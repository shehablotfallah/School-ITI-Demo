@model IEnumerable<Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container mt-3 pb-3">
    <div class="card">
        <div class="card-header alert alert-success d-flex align-items-center justify-content-between">
            <h3 class=" d-inline-flex align-items-center">
                <i class="bi bi-layers-half"></i>
                <span class="mx-2 text-uppercase text-center">@ViewData["Title"]</span>
            </h3>
            <a asp-action="Create" class="btn btn-success position-relative">
                <i class="bi bi-plus-square-dotted"></i>
                Add
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    @Model.Count()
                </span>
            </a>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr class="text-center">
                        <th>ID</th>
                        <th>Department</th>
                        <th>Status</th>
                        <th>Created On</th>
                        <th>Last Updated On</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var department in Model)
                    {
                        <partial name="_DepartmentRow" model="@department"/>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
